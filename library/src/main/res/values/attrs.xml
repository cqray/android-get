<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="ripple" format="boolean" />

    <!-- Action布局控件 -->
    <declare-styleable name="GetActionLayout">
        <attr name="defaultRipple" format="boolean" />
        <attr name="defaultVisible" format="boolean" />
        <attr name="defaultSpace" format="dimension" />
        <attr name="defaultTextColor" format="color" />
        <attr name="defaultTextSize" format="dimension" />
        <attr name="defaultTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="boldItalic" value="3" />
        </attr>
    </declare-styleable>

    <!-- 回退控件 -->
    <declare-styleable name="GetBackView">
        <attr name="ripple" />
        <attr name="iconSrc" format="reference|color" />
        <attr name="iconSpace" format="dimension" />
        <attr name="iconTint" format="color" />
        <attr name="text" format="string" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="textStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="boldItalic" value="3" />
        </attr>
    </declare-styleable>

    <!-- 标题栏 -->
    <declare-styleable name="GetToolbar">
        <!-- 一般属性 -->
        <attr name="ripple" />
        <attr name="elevation" />
        <attr name="paddingH" format="dimension" />
        <attr name="paddingContent" format="dimension" />
        <!-- 标题属性 -->
        <attr name="titleText" format="string" localization="suggested" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleTextStyle" />
        <attr name="titleEditable" format="boolean" />
        <attr name="titleCenter" format="boolean" />
        <attr name="titleSpace" format="dimension" />
        <!-- 返回 -->
        <attr name="backRipple" format="boolean" />
        <attr name="backIcon" format="reference" />
        <attr name="backIconVisible" format="boolean" />
        <attr name="backText" format="string" localization="suggested" />
        <attr name="backTextColor" format="color" />
        <attr name="backTextSize" format="dimension" />
        <attr name="backTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="boldItalic" value="3" />
        </attr>
        <attr name="backSpace" format="dimension" />
        <!-- ActionLayout相关属性 -->
        <attr name="actionRipple" format="boolean" />
        <attr name="actionSpace" format="dimension" />
        <attr name="actionTextColor" format="color" />
        <attr name="actionTextSize" format="dimension" />
        <attr name="actionTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="boldItalic" value="3" />
        </attr>
        <!-- 分割线相关属性 -->
        <attr name="dividerColor" format="color" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerMargin" format="dimension" />
        <attr name="dividerVisible" format="boolean" />
    </declare-styleable>
</resources>
