    <!-- 标题栏 -->
    <declare-styleable name="Toolbar">
        <!-- 一般属性 -->
        <attr name="sUseRipple" />
        <attr name="sPadding" />
        <attr name="elevation" />
        <!-- 标题属性 -->
        <attr name="titleText" format="string" localization="suggested" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleTextStyle" />
        <attr name="titleEditable" format="boolean" />
        <attr name="titleCenter" format="boolean" />
        <attr name="titleSpace" format="dimension" />
        <!-- 返回 -->
        <attr name="backIcon" format="reference" />
        <attr name="backIconVisible" format="boolean" />
        <attr name="backText" format="string" localization="suggested" />
        <attr name="backTextColor" format="color" />
        <attr name="backTextSize" format="dimension" />
        <attr name="backTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="backSpace" format="dimension" />

        <!-- ActionLayout相关属性 -->
        <attr name="sActionTextColor" />
        <attr name="sActionTextSize" />
        <attr name="sActionTextStyle" />
        <attr name="sActionSpace" />
        <!-- 分割线相关属性 -->
        <attr name="dividerColor" format="color" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerMargin" format="dimension" />
        <attr name="dividerVisible" format="boolean" />
    </declare-styleable>

    <!-- Action布局控件 -->
    <declare-styleable name="ActionLayout">
        <attr name="sUseRipple" />
        <attr name="defaultActionRipple" format="boolean" />
        <attr name="defaultActionSpace" format="dimension" />
        <attr name="defaultActionTextColor" format="color" />
        <attr name="defaultActionTextSize" format="dimension" />
        <attr name="defaultActionTextStyle">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>
        <attr name="defaultActionVisible" format="boolean" />

        <attr name="sActionTextColor" />
        <attr name="sActionTextSize" />
        <attr name="sActionTextStyle" />
        <attr name="sActionSpace" />
    </declare-styleable>

    <!-- 文本图标控件 -->
    <declare-styleable name="IconTextView">
        <!-- 图标位置 -->
        <attr name="sIconLocation" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <!--        <attr name="icon"-->
        <!-- 图标文本间隔 -->
        <attr name="sViewSpace" format="dimension" />
        <attr name="useRipple" />
        <attr name="android:src" />
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:textStyle" />
    </declare-styleable>
</resources>
