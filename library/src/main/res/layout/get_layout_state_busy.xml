<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription,UselessParent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/content"
        android:paddingBottom="@dimen/content"
        android:paddingLeft="@dimen/large"
        android:paddingRight="@dimen/large"
        android:gravity="center">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@id/get_state_spin_kit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:SpinKit_Color="@color/colorPrimary"
            app:SpinKit_Style="Circle" />

        <TextView
            android:id="@id/get_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:textColor="@color/text"
            android:textSize="@dimen/body"/>

    </LinearLayout>

</FrameLayout>
