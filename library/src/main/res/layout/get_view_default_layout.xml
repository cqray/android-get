<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.cqray.android.widget.GetToolbar
        android:id="@id/get_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar"
        android:visibility="gone" />

    <FrameLayout
        android:id="@id/get_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/get_footer"
        android:layout_below="@id/get_header"
        android:background="#00FF00">

        <!-- 刷新界面 -->
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/get_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnableLoadMore="false"
            app:srlEnableOverScrollDrag="true"
            app:srlEnablePureScrollMode="false"
            app:srlEnableScrollContentWhenRefreshed="false">

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </FrameLayout>

    <!-- 头部容器 -->
    <FrameLayout
        android:id="@id/get_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_toolbar" />

    <!-- 底部容器 -->
    <FrameLayout
        android:id="@id/get_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
