<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:ignore="ContentDescription, HardcodedText">

    <ImageView
        android:id="@+id/get_state_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/empty2"/>

    <TextView
        android:id="@+id/get_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/caption"
        android:textColor="@color/hint"
        android:text="暂无数据"/>

    <TextView
        android:id="@+id/get_state_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:paddingLeft="@dimen/content"
        android:paddingRight="@dimen/content"
        android:paddingTop="@dimen/smaller"
        android:paddingBottom="@dimen/smaller"
        android:background="@drawable/btn_retry"
        android:clickable="true"
        android:focusable="true"
        android:textSize="@dimen/caption"
        android:textColor="@color/retry_color"
        android:text="点击重试"/>

</LinearLayout>
